{% extends 'DisneyDisneylandBundle::layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-lg-12">
            <div class="row justify-content-center">
                <h1>{{ title }} {{ contents.0.parc }}</h1>
            </div>

            </br>
            {% for content in contents %}
                <div class="row">
                    <div class="col-lg-4">
                        <img src="http://cdn1.dlp-media.com/resize/mwImage/1/630/354/75/wdpromedia.disney.go.com/media/wdpro-dlp-assets/prod/fr-fr/system/images/{{ content.image }}" width="300px" height="200px">
                    </div>
                    <div class="col-lg-7 align-self-center">
                        <a href="{{ path ('attraction', {id: content.id }) }}">{{ content.name }}</a>
                    </div>
                </div>
                </br>
            {% endfor %}
        </div>
    </div>


{% endblock %}
