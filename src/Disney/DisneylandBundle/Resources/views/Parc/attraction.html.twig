{% extends 'DisneyDisneylandBundle::layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-lg-12">
            <div class="row justify-content-center">
                <img src="http://cdn1.dlp-media.com/resize/mwImage/1/630/354/75/wdpromedia.disney.go.com/media/wdpro-dlp-assets/prod/fr-fr/system/images/{{ content.image }}" width="700px" height="400px">
            </div>
            <div class="row justify-content-center">
                <h1>{{ content.name }}</h1>
            </div>

            </br>
            <div class="row">
                <p>Temps d'attebte actuellement : {{ content.waiting.time }} minutes</p>
            </div>
            <div class="row">
                <p>Pour les  : {{ content.age }}</p>
            </div>
            <div class="row">
                <p>Dans la partie : {{ content.land }}</p>
            </div>
            <div class="row">
                <p>{% if content.minSize == null %}
                    Taille minimum de : {{ content.minSize }}
                    {% else %}
                    Pas de taille minimum
                    {% endif %}
                </p>
            </div>
            </br>
        </div>
    </div>


{% endblock %}
